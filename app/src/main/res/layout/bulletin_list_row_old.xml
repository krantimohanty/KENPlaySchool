<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:id="@+id/bulletin_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/grey">

                <ImageView
                    android:id="@+id/picture"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    android:transitionName="bulletin_img" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="282dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:paddingLeft="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/row_head"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="san-serif"
                    android:text="@string/list_row_head"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/text_large_head" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/bulletin_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="san-serif"
                    android:layout_marginRight="1dp"
                    android:text=" Date: 4th Jan, 2016"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/text_small"
                    android:layout_alignParentRight="true" />
                </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="12dp">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/bulletin_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:fontFamily="san-serif"
                    android:lines="2"
                    android:text="Due to Summer Vacations Holiday the office will remain closed"
                    android:textSize="@dimen/text_small" />

</LinearLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/bulletin_more"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="san-serif"
                    android:text="......"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_small"
                    android:layout_gravity="right" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>