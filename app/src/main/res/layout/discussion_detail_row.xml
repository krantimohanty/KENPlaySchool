<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/grey"
                        android:padding="2dp">

                        <ImageView
                            android:id="@+id/pic"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitXY" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="5dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/discussion_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="san-serif"
                            android:text="Himalaya Pagada"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="@dimen/text_head" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/discussion_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="san-serif"
                            android:text="Saturday, 24 december 2011"
                            android:textAllCaps="true"
                            android:textSize="@dimen/text_small" />
                    </LinearLayout>
                </LinearLayout>

                <!-- <com.joanzapata.iconify.widget.IconButton
                     android:id="@+id/like"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:background="@android:color/transparent"
                     android:gravity="right|center"
                     android:paddingRight="5dp"
                     android:text="{ic-like} Like"
                     android:textColor="#9E9E9E"
                     android:textSize="@dimen/text_content" />-->

                <!--<com.joanzapata.iconify.widget.IconButton-->
                <!--android:id="@+id/like"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--style="?android:attr/borderlessButtonStyle"-->
                <!--android:text="{ic-like} Like"-->
                <!--android:textColor="#9E9E9E"-->
                <!--android:textSize="16sp"-->
                <!--android:gravity="right|center"-->
                <!--android:layout_weight="1"/>-->
            </RelativeLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/discussion_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="san-serif"
                android:text="Discussion detail"
                android:textSize="@dimen/text_small" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>